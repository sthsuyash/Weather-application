generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User model represents registered users
model User {
  id             Int             @id @default(autoincrement())
  email          String          @unique
  password       String
  country        String
  state          String
  city           String
  latitude       Float
  longitude      Float
  favorites      FavoriteCity[]
  recentSearches WeatherSearch[]
}

// City model represents information about cities
model City {
  id        Int             @id @default(autoincrement())
  name      String
  country   String
  state     String
  latitude  Float
  longitude Float
  weather   Weather[]
  users     FavoriteCity[]
  searches  WeatherSearch[]
}

// Weather model represents weather data for a city
model Weather {
  id          Int    @id @default(autoincrement())
  temperature Float
  conditions  String
  windSpeed   Float
  cityId      Int    @unique
  city        City   @relation(fields: [cityId], references: [id])
}

// FavoriteCity model represents user's favorite cities
model FavoriteCity {
  id     Int  @id @default(autoincrement())
  userId Int
  cityId Int
  user   User @relation(fields: [userId], references: [id])
  city   City @relation(fields: [cityId], references: [id])
}

// WeatherSearch model represents user's recent searches
model WeatherSearch {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  userId    Int
  cityId    Int
  user      User     @relation(fields: [userId], references: [id])
  city      City     @relation(fields: [cityId], references: [id])
}
